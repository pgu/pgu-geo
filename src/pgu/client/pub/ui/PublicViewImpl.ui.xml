<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:pgu="urn:import:pgu.client.components.playtoolbar"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" >

    <ui:style>
        .location {
            font-weight: bold;    
        }
        .description_item {
            padding-top: 15px;
        }
        .profile_section {
            padding-top: 0px;
        }
        .public_profile_map_area {
             /* padding-top: 20px; */
        }
        #pgu_geo_public_profile_map { 
            height: 570px; 
            position: relative; 
            background-color: #E5E3DF;
            overflow: hidden;
        }
        #pgu_geo_public_profile_map img { max-width:none; }
    </ui:style>            

    <g:HTMLPanel>
<!--         <g:HTMLPanel ui:field="submenu" addStyleNames="subnav subnav-fixed"> -->
<!--             <b:NavPills> -->
<!--                 <b:NavLink href="#public:profile">Profile</b:NavLink> -->
<!--                 <b:NavLink href="#public:contacts">Contacts</b:NavLink> -->
<!--             </b:NavPills> -->
<!--         </g:HTMLPanel> -->

        <b:Section ui:field="profileSection" addStyleNames="{style.profile_section}">
            <g:HTMLPanel addStyleNames="row-fluid">
                <div class="span12">
                    <g:HTMLPanel addStyleNames="page-header">
                        <h3>Profile</h3>
                    </g:HTMLPanel>
                </div>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="row-fluid">
                <div class="span6">
                    <g:HTMLPanel addStyleNames="row-fluid {style.public_profile_map_area}">
                        <div class="span12">
                            <div id="pgu_geo_public_profile_map_container" class="collapse in">
                                <div id="pgu_geo_public_profile_map">
                                </div>
                            </div>
                        </div>
                    </g:HTMLPanel>
                    <pgu:PlayToolbar ui:field="playToolbar"/>
                </div>
                <div class="span6">
                
                    <g:HTMLPanel ui:field="multiPanel" addStyleNames="collapse">
                        <g:HTML ui:field="itemsAccordion" addStyleNames="accordion" />
                    </g:HTMLPanel>
                    
                    <g:HTMLPanel ui:field="singlePanel" addStyleNames="well collapse in">
                        <!-- summary item -->
                        <g:HTMLPanel ui:field="summaryPanel" addStyleNames="collapse in">
                            <g:HTMLPanel addStyleNames="row-fluid {style.description_item}">
                                <div class="span4">
                                    <h6>Location</h6>
                                    <b:NavPills>
                                        <b:NavLink ui:field="locContainer" addStyleNames="{style.location}"></b:NavLink>
                                    </b:NavPills>
                                </div>
                                <div class="span4">
                                    <h6>Specialties</h6>
                                    <g:HTMLPanel ui:field="spContainer" />
                                </div>
                                <div class="span4">
                                    <h6>Languages</h6>
                                    <g:HTML ui:field="lgContainer" />
                                </div>
                            </g:HTMLPanel>
                            <g:HTMLPanel addStyleNames="row-fluid {style.description_item}">
                                <div class="span12">
                                    <g:HTML ui:field="summaryContainer" />
                                </div>
                            </g:HTMLPanel>
                        </g:HTMLPanel>
                        
                        <!-- description item -->
                        <g:HTMLPanel ui:field="profileItemPanel" addStyleNames="row-fluid {style.description_item}">
                            <div class="span12">
                                <g:HTML ui:field="profileItemDescription" />
                            </div>
                        </g:HTMLPanel>
                    </g:HTMLPanel>
                </div>
            </g:HTMLPanel>
        </b:Section>    
        
        
<!--         <b:Button ui:field="oauthLink" icon="LINKEDIN_SIGN" iconSize="LARGE" > Profile on linkedin Â» </b:Button> -->
        
    </g:HTMLPanel>
</ui:UiBinder> 