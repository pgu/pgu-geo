<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" >

    <ui:style>
        .map {
            float: left;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="row-fluid">
            <b:Well addStyleNames="form-inline">
                <b:CheckBox checked="true" ui:field="worldBtn">World</b:CheckBox>
                <b:CheckBox checked="true" ui:field="americasBtn">Americas</b:CheckBox>
                <b:CheckBox checked="true" ui:field="europeBtn">Europe</b:CheckBox>
                <b:CheckBox checked="true" ui:field="asiaBtn">Asia</b:CheckBox>
                <b:CheckBox checked="true" ui:field="oceaniaBtn">Oceania</b:CheckBox>
                <b:CheckBox checked="true" ui:field="africaBtn">Africa</b:CheckBox>
            </b:Well>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="row-fluid">
                <g:HTMLPanel ui:field="worldMap" addStyleNames="{style.map}" />
                <g:HTMLPanel ui:field="americasMap" addStyleNames="{style.map}" />
                <g:HTMLPanel ui:field="europeMap" addStyleNames="{style.map}" />
                <g:HTMLPanel ui:field="asiaMap" addStyleNames="{style.map}" />
                <g:HTMLPanel ui:field="oceaniaMap" addStyleNames="{style.map}" />
                <g:HTMLPanel ui:field="africaMap" addStyleNames="{style.map}" />
                <div style="clear:both" />
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="row-fluid">
            <b:Well>
                <b:ControlLabel>Add a fusion table</b:ControlLabel>
                <b:TextBox ui:field="fusionBox" placeholder="https://www.google.com/fusiontables/embedviz?viz=..." /> 
                <b:Button ui:field="addBtn" type="PRIMARY" icon="PLUS" />
            </b:Well>
        </g:HTMLPanel>
