<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" >

    <ui:style type='pgu.client.contacts.ui.ContactsViewImpl.ChartStyle'>
        .chartWell {
            float: left;
            margin: 10px;
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 4px;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
            width: 556px;
            height: 347px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="row-fluid">
            <b:Well addStyleNames="form-inline">
                <b:CheckBox checked="true" ui:field="worldBtn">World</b:CheckBox>
                <b:CheckBox checked="true" ui:field="americasBtn">Americas</b:CheckBox>
                <b:CheckBox checked="true" ui:field="europeBtn">Europe</b:CheckBox>
                <b:CheckBox checked="true" ui:field="asiaBtn">Asia</b:CheckBox>
                <b:CheckBox checked="true" ui:field="oceaniaBtn">Oceania</b:CheckBox>
                <b:CheckBox checked="true" ui:field="africaBtn">Africa</b:CheckBox>
            </b:Well>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="row-fluid">
                <g:HTMLPanel ui:field="worldMap" addStyleNames="{style.chartWell}" />
                <g:HTMLPanel ui:field="americasMap" addStyleNames="{style.chartWell}" />
                <g:HTMLPanel ui:field="europeMap" addStyleNames="{style.chartWell}" />
                <g:HTMLPanel ui:field="asiaMap" addStyleNames="{style.chartWell}" />
                <g:HTMLPanel ui:field="oceaniaMap" addStyleNames="{style.chartWell}" />
                <g:HTMLPanel ui:field="africaMap" addStyleNames="{style.chartWell}" />
                <div style="clear:both" />
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="row-fluid">
            <b:Well>
                <h4>Add a fusion table</h4>
                <p></p>
                <b:TextBox ui:field="fusionBox" placeholder="https://www.google.com/fusiontables/embedviz?viz=..." addStyleNames="input-xxlarge" /> 
                <p></p>
                <b:Button ui:field="addBtn" type="PRIMARY" icon="PLUS" />
            </b:Well>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="fusionContainer" addStyleNames="row-fluid" />
        <div style="height:50px" />
    </g:HTMLPanel>
</ui:UiBinder> 