<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:style>
        .suggestionsFound {
            margin-left: 18px;
        }
        .firstNavbar {
            margin-bottom: 0px;
        }
    </ui:style>
    <g:HTMLPanel>
<!--         position="TOP"  -->
        <b:Navbar addStyleNames="{style.firstNavbar}">
            <b:Brand ui:field="appTitle">Biblioteca</b:Brand>
            <b:NavSearch ui:field="sText" size="5" placeholder="Cualquier texto" alignment="LEFT"/>        
            <b:Button ui:field="searchSuggestionsBtn" icon="SEARCH" iconSize="LARGE" type="PRIMARY">Buscar sugerencias</b:Button>
            <b:Button ui:field="clearSuggestionsBtn" icon="REMOVE" size="SMALL" type="PRIMARY"></b:Button>
            <b:Popover ui:field="suggestionsInfo">
                <b:Button icon="INFO_SIGN" type="INFO" iconSize="LARGE" ></b:Button>
            </b:Popover>
            <b:Nav alignment="RIGHT">
                <b:NavLink icon="BOOK" ui:field="goToLibraryBtn" iconSize="LARGE" >Biblioteca</b:NavLink>
                <b:NavLink icon="DASHBOARD" ui:field="goToAppstatsBtn" iconSize="LARGE" >Appstats</b:NavLink>
                <b:NavLink icon="WRENCH" ui:field="goToSetupBtn" iconSize="LARGE" >Configuración</b:NavLink>
                <b:NavLink icon="UPLOAD" ui:field="goToImportBtn" iconSize="LARGE" >Import</b:NavLink>
                <b:NavLink icon="OFF" ui:field="logoutBtn" iconSize="LARGE" >Log out</b:NavLink>
                <b:NavLink icon="USER" ui:field="adminBtn" iconSize="LARGE" >Admin</b:NavLink>
            </b:Nav>
        </b:Navbar>
        <b:NavPills ui:field="suggestionsContainer" />
        <b:Row ui:field="suggestionsRow">
            <b:Column size="3">
                <b:Label ui:field="suggestionsFound" type="INFO" addStyleNames="{style.suggestionsFound}" />
            </b:Column>
        </b:Row>
        <b:Navbar>
            <b:Nav>
                <b:NavLink icon="BOOK" iconSize="LARGE" />
                <b:NavSearch ui:field="sTitle" size="3" placeholder="Título" alignment="LEFT"/>
            </b:Nav>        
            <b:Nav>
                <b:NavLink icon="USER" iconSize="LARGE" />
                <b:NavSearch ui:field="sAuthor" size="2" placeholder="Autor" alignment="LEFT"/>        
            </b:Nav>        
            <b:Nav>
                <b:NavLink icon="PRINT" iconSize="LARGE" />
                <b:NavSearch ui:field="sEditor" size="2" placeholder="Editor" alignment="LEFT"/>        
            </b:Nav>        
            <b:Nav>
                <b:NavLink icon="TAG" iconSize="LARGE" />
                <b:NavSearch ui:field="sCategory" size="2" placeholder="Categoría" alignment="LEFT"/>        
            </b:Nav>        
            <b:Nav>
                <b:NavLink icon="CALENDAR" iconSize="LARGE" />
                <b:NavSearch ui:field="sYear" size="2" placeholder="Año" alignment="LEFT"/>        
            </b:Nav>        
            <b:Nav>
                <b:NavLink icon="COMMENT" iconSize="LARGE" />
                <b:NavSearch ui:field="sComment" size="2" placeholder="Comentario" alignment="LEFT"/>        
            </b:Nav>        
            <b:Button ui:field="searchBooksBtn" icon="SEARCH" iconSize="LARGE" type="SUCCESS">Buscar libros</b:Button>
            <b:Button ui:field="clearBooksBtn" icon="REMOVE" size="SMALL" type="SUCCESS"></b:Button>
            <b:Popover ui:field="searchInfo">
                <b:Button icon="INFO_SIGN" type="INFO" iconSize="LARGE" ></b:Button>
            </b:Popover>
        </b:Navbar>
        <b:ProgressBar ui:field="progressBar" type="ANIMATED" percent="100"/>
    </g:HTMLPanel>
</ui:UiBinder> 