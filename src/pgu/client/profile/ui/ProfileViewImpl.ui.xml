<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
            
    <g:HTMLPanel>
        <b:Hero>
            <b:Heading size="2" ui:field="nameBasic" />
            <b:Heading size="3" ui:field="headlineBasic" />
            <b:Paragraph ui:field="summaryBasic" />
        </b:Hero>  
        
        <div class="row-fluid">
            <div class="span4">
                <h6>Languages</h6>
                <g:HTMLPanel ui:field="lgContainer" />
            </div>
            <div class="span4">
                <h6>Specialties</h6>
                <p>Ajax, J2EE, Java, Javascript, Eclipse</p>
            </div>
            <div class="span4">
                <h6>Location</h6>
                <p>Paris Area, France</p>
            </div>
        </div>
        
        <!-- Positions -->
        <b:Section ui:field="positionsSection">
            <g:HTMLPanel>
                <g:HTMLPanel addStyleNames="page-header">
                    <h3>Experience</h3>
                </g:HTMLPanel>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="row-fluid">
            </g:HTMLPanel>
        </b:Section>
        
        
        <!-- Education -->
        <b:Section ui:field="educationSection">
            <g:HTMLPanel>
                <g:HTMLPanel addStyleNames="page-header">
                    <h3>Education</h3>
                </g:HTMLPanel>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="row-fluid">
            </g:HTMLPanel>
        </b:Section>
        
    </g:HTMLPanel>
</ui:UiBinder> 